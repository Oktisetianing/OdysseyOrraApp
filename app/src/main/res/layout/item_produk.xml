<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/maincard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_container"
            android:padding="20dp">

            <ImageView
                android:id="@+id/gmbrproduk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/parispremium" />

            <TextView
                android:id="@+id/tvnamaproduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/gmbrproduk"
                android:text="Nama Wisata"
                android:textColor="@color/pinktua"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvdeskripsi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvnamaproduk"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/gmbrproduk"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnpesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdeskripsi"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/gmbrproduk"
                android:hint="Pesan"
                android:textSize="15dp"
                android:textColorHint="@color/ijotua"
                android:backgroundTint="@color/pinkmuda"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>